{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Login{% endblock %}
{% block body %}
    <div class="container" id="wrap">
        <div class="row" id="main">
            <div class="col-lg-5 my-5" id="login_container">
                <h1 class="text-center text-dark pt-2">Login</h1>
                <p id="catch_phrase">
                    Connect with Facebook and enjoy the power of the Bilemo API!
                </p>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey }}</div>
                {% endif %}
                <a href="https://www.facebook.com/v3.2/dialog/oauth?client_id={{ fb_client_id }}&redirect_uri={{ url('bi_space') }}&state={{ csrf_token('authenticate') }}" type="button" id="fbButton" class="btn btn-info btn-md mb-4"><i class="fa fa-facebook"></i> Authenticate with Facebook</a>
            </div>
        </div>
    </div>
{% endblock %}
